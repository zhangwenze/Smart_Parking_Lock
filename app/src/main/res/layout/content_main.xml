<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/app_bar_main">
    <View
        android:id="@+id/line_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFA0A0A0"
        android:layout_above="@+id/bottom_menu"
        ></View>
    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        >
        <LinearLayout
            android:id="@+id/my_lock_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/my_lock_img"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/ic_home"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/my_lock_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:drawablePadding="1dp"
                android:gravity="top"
                android:layout_gravity="center"
                android:padding="1dp"
                android:textSize="12sp"
                android:text="我的车位锁"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/arounds_lock_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/arounds_lock_img"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/ic_location"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/around_lock_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="1dp"
                android:gravity="top"
                android:padding="1dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="周边车位锁"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/life_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/life_img"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/ic_life"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/life_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="1dp"
                android:gravity="top"
                android:padding="1dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="生活服务"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/car_life_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/car_life_img"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/ic_me"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/car_life_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="1dp"
                android:gravity="top"
                android:padding="1dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="个人中心"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_fragment"
        android:layout_above="@id/line_bar"
        ></FrameLayout>
</RelativeLayout>
